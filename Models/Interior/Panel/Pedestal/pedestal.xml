<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pedestal.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>pedestal</object-name>
    <object-name>fentes</object-name>
    <object-name>disctrim</object-name>
    <object-name>throttle-knob.L</object-name>
    <object-name>throttle-knob.R</object-name>
    <object-name>rpm-knob.L</object-name>
    <object-name>rpm-knob.R</object-name>
    <object-name>mixture-knob.L</object-name>
    <object-name>mixture-knob.R</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <!-- KR 87 -->
  <model>
    <path>Aircraft/Aero-Commander/Models/Interior/Panel/Instruments/KN53/KN53.xml</path>
    <offsets>
      <x-m>  0.069 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.070 </z-m>
      <pitch-deg> -37 </pitch-deg>
    </offsets>
  </model>

    <!-- KR 87 -->
  <model>
   <path>Aircraft/Aero-Commander/Models/Interior/Panel/Instruments/KT76A/KT76A.xml</path>
    <offsets>
      <x-m>  0.105 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.120 </z-m>
      <pitch-deg> -37 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>throttle-knob.L</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>throttle-knob.R</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
        
  <animation>
    <type>rotate</type>
    <object-name>rpm-knob.L</object-name>
    <property>controls/engines/engine[0]/propeller-pitch</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
        
  <animation>
    <type>rotate</type>
    <object-name>rpm-knob.R</object-name>
    <property>controls/engines/engine[1]/propeller-pitch</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
        
  <animation>
    <type>rotate</type>
    <object-name>mixture-knob.L</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
        
  <animation>
    <type>rotate</type>
    <object-name>mixture-knob.R</object-name>
    <property>controls/engines/engine[1]/mixture</property>
    <factor> 50 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
