<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>amp.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Aero-Commander/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <red>   0.80 </red>
      <green> 0.50 </green>
      <blue>  0.50 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>systems/electrical/amp</property>
    <interpolation>
      <entry><ind> -60 </ind><dep> -45 </dep></entry>
      <entry><ind> -40 </ind><dep> -25 </dep></entry>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind>  40 </ind><dep>  25 </dep></entry>
      <entry><ind>  60 </ind><dep>  45 </dep></entry>
    </interpolation>
    <center> 
      <x-m>  0.004757 </x-m>
      <y-m>  0.000000 </y-m>
      <z-m> -0.017610 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
