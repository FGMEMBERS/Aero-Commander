<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>trim.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needleelev</object-name>
    <object-name>needlerudd</object-name>
    
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <red>   0.80 </red>
      <green> 0.50 </green>
      <blue>  0.50 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needleelev</object-name>
    <property>/controls/flight/elevator-trim</property>
    <factor> 70 </factor>
    <center>
     <x-m>  0.001131 </x-m>
     <y-m> -0.016050 </y-m>
     <z-m> -0.000069 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needlerudd</object-name>
    <property>/controls/flight/rudder-trim</property>
    <factor> 70 </factor>
    <center>
     <x-m>  0.001131 </x-m>
     <y-m>  0.016050 </y-m>
     <z-m> -0.000069 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
