<PropertyList>
  
  <path>MarkerBeacons.ac</path>
    
  <animation>
    <!-- opaque objects -->
    <object-name>base</object-name>
    <object-name>IM-light</object-name>
    <object-name>MM-light</object-name>
    <object-name>OM-light</object-name>
      
    <!--transparent objects -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>OM-light</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
      <factor-prop>instrumentation/marker-beacon/outer</factor-prop>
    </emission>
  </animation>
    
  <animation>
    <type>material</type>
    <object-name>MM-light</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
      <factor-prop>instrumentation/marker-beacon/middle</factor-prop>
    </emission>
  </animation>
    
  <animation>
    <type>material</type>
    <object-name>IM-light</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
      <factor-prop>instrumentation/marker-beacon/inner</factor-prop>
    </emission>
  </animation>
  
</PropertyList>
