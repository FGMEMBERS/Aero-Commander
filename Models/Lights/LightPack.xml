<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- nav lights -->
  <!-- green and red navigation lights, usually mounted on the wingtips -->
  <!-- note: default orientation is up -->
  <model>
    <name>GreenLight</name>
    <path>Aircraft/Aero-Commander/Models/Lights/GreenLight.xml</path>
    <offsets>
           <x-m> -1.67520 </x-m>
      <y-m>  7.47671 </y-m>
      <z-m>  0.32118 </z-m>
      <roll-deg>-90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  <model>
    <name>RedLight</name>
    <path>Aircraft/Aero-Commander/Models/Lights/RedLight.xml</path>
    <offsets>
      <x-m> -1.67520 </x-m>
      <y-m> -7.47671 </y-m>
      <z-m>  0.32118 </z-m>
      <roll-deg>90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  
  <!-- beacon -->
  <!-- bright red flashing light -->
  <!-- note: default orientation is up -->
  <model>
    <name>Beacon1</name>
    <path>Aircraft/Aero-Commander/Models/Lights/Beacon.xml</path>
    <offsets>
       <x-m> 4.80606 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 2.24377 </z-m>
      <pitch-deg>6</pitch-deg>
    </offsets>
  </model>
 <model>
    <name>Beacon2</name>
