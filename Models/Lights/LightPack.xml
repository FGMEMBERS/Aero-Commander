      <y-m> -0.350 </y-m>
      <z-m> -1.580 </z-m>
      <heading-deg> 10 </heading-deg>
    </offsets>
  </model>
  
  <!-- taxi light -->
  <!-- a weaker front facing spotlight, often mounted on the front gear 
