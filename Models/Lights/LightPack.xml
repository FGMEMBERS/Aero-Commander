    <offsets>
      <x-m> -1.06960 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -1.94863 </z-m>
      <pitch-deg>174</pitch-deg>
    </offsets>
  </model>
  
  <!-- landing lights -->
  <!-- a powerful front facing spotlight -->
  <model>
    <name>LandingLight1</name>
